---
interface Props {
  date: Date;
}

const { date = new Date() } = Astro.props;
---

<>
  {
    date instanceof Date && (
      <time datetime={date.toISOString()}>
        {date.toLocaleDateString("en-us", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })}
      </time>
    )
  }
</>
