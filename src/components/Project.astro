---
import { Image } from "astro:assets";
const { data } = Astro.props;

const { image, title, description } = data;
import { Icon } from "astro-iconify";
---

<div
  class="border-background border-l-4 p-4 bg-foreground rounded overflow-hidden flex flex-col gap-4"
>
  <Icon class="w-5 h-10 absolute top-5 right-1" name="discord-star" />
  <Icon class="w-3 h-6 absolute top-2 -right-1" name="discord-star" />
  <Icon class="w-3 h-6 absolute top-[45%] -left-1 z-10" name="discord-star" />

  <div class="flex overflow-hidden max-h-[350px] h-[300px]">
    <Image
      src={image}
      alt=""
      class="rounded-sm max-w-full max-h-full object-cover aspect-[400/215] object-left-top hover:object-left-bottom duration-500"
      height={"2000"}
      width={"2000"}
    />
    <!-- <img
      src="https://images-ext-1.discordapp.net/external/0X342NEAHUVnK0ju9A6VpBQOhIiU2lMoI-14o8HuV6M/https/lmssieh.com/placeholder-social.png?width=500&height=268"
    /> -->
  </div>
  <div class="flex flex-col gap-2">
    <div>
      <a href="https://redoit.app/" target="_blank" class="text-xl">{title}</a>
    </div>
    <p class="text-gray-200">
      {description}
    </p>
    <div class="text-muted text-sm">
      <div>Product Design · Mobile App · 2019</div>
    </div>
  </div>
</div>
