---
import { ViewTransitions, fade, slide } from "astro:transitions";
import clsx from "clsx";
import BaseHead from "../components/BaseHead.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <ViewTransitions />
  </head>
  <body
    class="bg-foreground text-primary flex justify-center py-28 scrollbar-thin scrollbar-thumb-darker scrollbar-track-black/20 scrollbar-thumb-rounded-md"
  >
    <main class="max-w-xl w-full bg-background rounded overflow-hidden">
      <header class="min-h-[106px] bg-rose-300 relative mb-14">
        <div class="realtive" transition:persist>
          <div
            class="h-[120px] w-[120px] bg-background rounded-full overflow-hidden flex items-center justify-center absolute top-[30px] left-[22px] right-0"
          >
            <div class="w-[90%] h-[90%] rounded-full overflow-hidden">
              <img
                class="h-full w-full"
                src="https://cdn.discordapp.com/avatars/249492401519984640/44cdac697636a32d786e38b1deeb21fe.webp?size=100"
              />
            </div>
          </div>
        </div>
      </header>
      <div class="m-4 p-3 bg-black/50 rounded">
        <div>
          <div>
            <div class="font-semibold text-lg">garlic</div>
            <div class="text-muted">geylic</div>
          </div>
          <div class="my-5">
            <ul
              class="flex gap-8 text-center text-sm border-b border-slate-200/20"
            >
              <li
                class={clsx(" flex-1 ", {
                  "border-b-2": currentPath === "/" ? true : false,
                })}
              >
                <a class="pb-4 cursor-pointer inline-block" href="/">About</a>
              </li>
              <li
                class={clsx(" flex-1 ", {
                  "border-b-2": currentPath === "/work" ? true : false,
                })}
              >
                <a class="pb-4 cursor-pointer inline-block" href="/work">Work</a
                >
              </li>
              <li
                class={clsx(" flex-1 ", {
                  "border-b-2": currentPath === "/til" ? true : false,
                })}
              >
                <a class="pb-4 cursor-pointer inline-block" href="/til">TIL</a>
              </li>
              <li
                class={clsx(" flex-1 ", {
                  "border-b-2": currentPath === "/guest-book" ? true : false,
                })}
              >
                <a class="pb-4 cursor-pointer inline-block" href="/guest-book"
                  >Guest Book</a
                >
              </li>
            </ul>
          </div>
        </div>
        <slot />
      </div>
    </main>
  </body>
</html>
