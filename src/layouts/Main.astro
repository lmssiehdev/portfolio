---
import BaseHead from "../components/BaseHead.astro";
import Project from "../components/Project.astro";
import Link from "../components/ui/Link.astro";
import Role from "../components/ui/Role.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import clsx from "clsx";

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="bg-foreground text-primary min-h-screen flex items-center justify-center"
  >
    <!-- <Header title={SITE_TITLE} /> -->

    <!-- <Footer /> -->

    <main class="max-w-xl w-full bg-background rounded overflow-hidden">
      <header class="min-h-[106px] bg-rose-300 relative mb-14">
        <div class="realtive">
          <div
            class="h-[120px] w-[120px] bg-background rounded-full overflow-hidden flex items-center justify-center absolute top-[30px] left-[22px] right-0"
          >
            <div class="w-[90%] h-[90%] rounded-full overflow-hidden">
              <img
                class="h-full w-full"
                src="https://cdn.discordapp.com/avatars/249492401519984640/44cdac697636a32d786e38b1deeb21fe.webp?size=100"
              />
            </div>
          </div>
        </div>
      </header>
      <div class="m-4 p-3 bg-black/50 rounded">
        <div>
          <div class="font-semibold text-lg">garlic</div>
          <div class="text-muted">geylic</div>
        </div>
        <div class="my-5">
          <ul
            class="flex gap-8 text-center text-sm border-b border-slate-200/20"
          >
            <li
              class={clsx("pb-4 cursor-pointer flex-1", {
                "border-b-2": currentPath === "/" ? true : false,
              })}
            >
              <a href="/">About</a>
            </li>
            <li
              class={clsx("pb-4 cursor-pointer flex-1", {
                "border-b-2": currentPath === "/about" ? true : false,
              })}
            >
              <a href="/about">Work</a>
            </li>
            <li
              class={clsx("pb-4 cursor-pointer flex-1", {
                "border-b-2": currentPath === "/til" ? true : false,
              })}
            >
              <a href="/til">TIL</a>
            </li>
            <li
              class={clsx("pb-4 cursor-pointer flex-1", {
                "border-b-2": currentPath === "/guest-book" ? true : false,
              })}
            >
              <a href="/guest-book">Guest Book</a>
            </li>
          </ul>
        </div>
        <slot />
      </div>
    </main>
  </body>
</html>
