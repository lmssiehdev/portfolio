---
import type { keyof } from "valibot";
import RedoitPojectImage from "../assets/images/redoit-project/redoit-ss-01.png";
import LibrereadProjectImage from "../assets/images/03.png";
import Project from "../components/Project.astro";
import Layout from "../layouts/Main.astro";

const projectData = [
  {
    title: "Redoit",
    description: `REDOIT! is a habit tracking app that helps you reach your goals by creating and tracking positive habits.`,
    image: RedoitPojectImage,
    url: "/project/redoit",
    openInNewTab: false,
  },
  {
    title: "librereads",
    description: `A privacy respecting alternative front-end for Goodreads.`,
    image: LibrereadProjectImage,
    url: "https://github.com/lmssiehdev/librereads",
    openInNewTab: true,
  },
  // {
  //   title: "anyone can cook",
  //   description: `Encouraging home cooks to share their recipes within the Kitchen Stories community.`,
