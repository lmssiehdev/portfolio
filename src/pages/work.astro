  //     "https://assets-global.website-files.com/5e0e761a473c7693458bb389/5fecd63f148d16276a9e05ce_cover-poll.jpg",
  // },
] as const;

// TODO: find a better
export type ProjectData = (typeof projectData)[0];
---

<Layout
  title="About Me"
  description="Lorem ipsum dolor sit amet"
  pubDate={new Date("August 08 2021")}
  heroImage="/blog-placeholder-about.jpg"
>
  <div>
    <h2 class="text-xl font-medium mt-5 mb-10">My work</h2>
    <div class="flex flex-col gap-4 relative">
      {projectData.map((projectInfo) => <Project data={projectInfo} />)}
    </div>
  </div>
</Layout>
